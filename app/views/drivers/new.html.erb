<h1>Driver Sign Up</h1>

<%= form_for @driver, url: {contoller: 'drivers', action: 'create'} do |f| %>

  <h2>Your Info</h2>

  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :email %>
  <%= f.text_field :email %>
  <%= f.label :phone_number %>
  <%= f.text_field :phone_number %>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>

  <h2>Car Info</h2>

  <%= f.label :car_make %>
  <%= f.text_field :car_make %>
  <%= f.label :car_model %>
  <%= f.text_field :car_model %>
  <%= f.label :passenger_cap %>
  <%= f.text_field :passenger_cap %>

  <%= f.submit "create account" %>
<% end %>
